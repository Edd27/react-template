{
    "name": "react-template",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "description": "A React template for creating a new React project.",
    "scripts": {
        "dev": "vite --host 0.0.0.0 --port 3000",
        "build": "vite build",
        "preview": "vite preview",
        "lint": "eslint src/**/*.js --fix",
        "prettier": "prettier --write .",
        "prepare": "husky install",
        "postinstall": "npm run prepare"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Edd27/react-template.git"
    },
    "author": {
        "name": "Edgar Benavides",
        "email": "contacto@edevsoft.com",
        "url": "https://edevsoft.com"
    },
    "license": "MIT",
    "dependencies": {
        "react": "18.2.0",
        "react-dom": "18.2.0"
    },
    "devDependencies": {
        "@types/react": "18.0.15",
        "@types/react-dom": "18.0.6",
        "@vitejs/plugin-react": "2.0.0",
        "vite": "3.0.0",
        "eslint": "8.20.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-config-standard": "17.0.0",
        "eslint-plugin-import": "2.26.0",
        "eslint-plugin-n": "15.2.4",
        "eslint-plugin-promise": "6.0.0",
        "husky": "8.0.1",
        "lint-staged": "13.0.3",
        "prettier": "2.7.1"
    },
    "imports": {
        "#Lib/*": "./src/lib/*"
    },
    "lint-staged": {
        "*.{js,jsx}": "eslint --fix",
        "*.{js,jsx,md}": "prettier --write"
    },
    "bugs": {
        "url": "https://github.com/Edd27/react-template/issues"
    },
    "homepage": "https://github.com/Edd27/react-template#readme"
}
